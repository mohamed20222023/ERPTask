@model IdentityRole
@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Layout/_Layout.cshtml";
}

@section Admin {
	@await Html.PartialAsync("~/Views/Partials/_partial.cshtml");
}

<div class="app-content page-body">
	<div class="container">

		<!--Page header-->
		<div class="page-header">
			<div class="page-leftheader">
				<h4 class="page-title">Add Role</h4>
				<ol class="breadcrumb pl-0">
					<li class="breadcrumb-item"><a asp-controller="Home" asp-action="AdminIndex">Home</a></li>
					<li class="breadcrumb-item"><a asp-controller="Role" asp-action="Create">Add</a></li>
					<li class="breadcrumb-item active" aria-current="page">Add Role</li>
				</ol>
			</div>
		</div>
		<!--End Page header-->
		<!-- Row -->
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<form asp-controller="Role" asp-action="Create" class="card">
					<div class="card-header">
						<h3 class="card-title">Add Role</h3>
						<div class="card-options ">
							<a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
						</div>
					</div>
					<div class=" card-body">
						<div class="row">
							<div class="col-md-6 col-lg-12">

								@*Name*@
								<div class="form-group">
									<label class="form-label" asp-for="Name">Enter Name</label>
									<input type="text" asp-for="Name" class="form-control" placeholder="Name">
									<span class="text-danger" asp-validation-for="Name"></span>
								</div>


							</div>
						</div>
					</div>
					<center>
						<div class="col-md-4 mb-5">
							<input type="submit" class="btn btn-info  mb-1" value="Add Role" />
							<a asp-action="Index" class="btn btn-light">Back To List</a>
						</div>
					</center>
				</form>
			</div>
		</div>
		<!-- End Row-->

	</div>
</div><!-- end app-content-->

